<config>
	<modules>
		<Soluvas_TranslationExporter>
			<version>1.0.0</version>
		</Soluvas_TranslationExporter>
	</modules>
    <admin>
        <routers>
            <translationexporter>
                <use>admin</use>
                <args>
                    <module>Soluvas_TranslationExporter</module>
                    <frontName>translationexporter</frontName>
                </args>
            </translationexporter>
        </routers>
	</admin>
	<adminhtml>		
		<layout>
			<updates>
				<translationexporter>
					<file>translationexporter.xml</file>
				</translationexporter>
			</updates>
		</layout>
    </adminhtml>
</config>